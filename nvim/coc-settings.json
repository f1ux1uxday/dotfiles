{
  "css.validate": true,
  "less.validate": false,
  "scss.validate": false,
  "eslint.alwaysShowStatus": true,
  "html.format.enable": true,
  "html.filetypes": [
      "html"
  ],
  "Lua.diagnostics.globals": ["vim"],
  "languageserver": {
    "liquid": {
      "command": "theme-check-language-server",
      "filetypes": [
        "liquid"
      ],
      "settings": {
        "themeCheck": {
          "checkOnOpen": true,
          "checkOnChange": true,
          "checkOnSave": true
        }
      },
      "rootPatterns": [
        ".theme-check.yml"
      ]
    }
  }
}



